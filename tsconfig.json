{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "esnext",
    "jsx": "react",
    "lib": ["dom", "es2015", "es2017"],
    "baseUrl": "./",
    "paths": {
      "@components/*": ["src/components/*"],
      "@content/*": ["content/*"],
      "@utils/*": ["src/utils/*"]
    }
  },
  "include": ["./src/**/*"]
}
